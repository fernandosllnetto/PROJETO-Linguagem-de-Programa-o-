package br.com.vidanimal.model;

public class Animal {

    private Long id;
    private String nome;
    private String especie;
    private String raca;
    private int idade;
    private Tutor tutor;
    private boolean disponivelParaAdocao;

    public Animal(Long id, String nome, String especie, String raca, int idade, Tutor tutor) {
        this.id = id;
        this.nome = nome;
        this.especie = especie;
        this.raca = raca;
        this.idade = idade;
        this.tutor = tutor;
        this.disponivelParaAdocao = false;
    }

    public void marcarDisponivel() {
        this.disponivelParaAdocao = true;
    }

    public void marcarIndisponivel() {
        this.disponivelParaAdocao = false;
    }

    public boolean isDisponivelParaAdocao() {
        return disponivelParaAdocao;
    }

    // getters e setters
}
